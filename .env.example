# ============================================================================
# Environment Variables Example - BuyWhyWhy (Кэшка)
# ============================================================================
# Скопировать в .env и заполнить реальными значениями

# Node Environment
NODE_ENV=development
PORT=3000
CORS_ORIGIN=*

# Database
DATABASE_URL=postgresql://postgres:postgres_dev_password_change_me@postgres:5432/buywhywhy

# JWT Secrets (сгенерировать сильные секреты для production!)
# Генерация: openssl rand -base64 32
JWT_SECRET=dev_jwt_secret_change_for_production
JWT_REFRESH_SECRET=dev_refresh_secret_change_for_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# VK ID OAuth (получить на https://dev.vk.com/ru/vkid)
# ============================================================================
VK_APP_ID=
VK_SECURE_KEY=

# ============================================================================
# Yandex ID OAuth (получить на https://oauth.yandex.ru)
# ============================================================================
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=

